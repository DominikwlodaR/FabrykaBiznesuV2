@using FabrykaBiznesuV2.ViewModels;
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}



<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">



                            <h2 class="fw-bold mb-2 text-uppercase">Zaloguj się!</h2>
                            <p class="text-white-50 mb-5">Podaj sowje dane logowania!</p>
                             <form asp-action="Login">
                                <div class="form-outline form-white mb-4">
                                 
                                    <input asp-for="Email" type="email" id="typeEmailX" class="form-control form-control-lg" placeholder="Adres Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" input type="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Hasło" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                       

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Zaloguj</button>
                            </form>

                            <br>
                            @if (TempData["Error"] != null)
                            {
                               
                                <div class="">
                                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                                </div>
                            }

                        </div>

                     

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
