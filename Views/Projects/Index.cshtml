@model List<FabrykaBiznesuV2.Models.Project>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class=" kafelki p-3 my-4">

    <h1 class="he">Lista projektów</h1>

  
        <div class="row">
            <div class="col-2 card tile mt-4 ml-3 stats">
                <h3>14</h3>
                <p>Projektów</p>
            </div>
            <div class="col-2 card tile mt-4 ml-4 stats" > 
                <h3>6</h3>
                <p>Rozpoczętych projektów</p>
            </div>
            <div class="col-2 card tile mt-4 ml-4 stats">
                <h3>8</h3>
                <p>Zakończonych projektów</p>
            </div>
            <div class="col-2 mt-4 ml-4 ">
                <div class="d-flex flex-column">

                <a asp-controller="projects" asp-action="create" class="btn btn-outline-secondary"><i class="fas fa-plus"></i> Dodaj </a>
              
                    <div class="h-50  card mt-3">
                    <button type="button" class="btn btn-outline-secondary"><i class="fas fa-filter"></i> Filtry</button>
                    </div>
                </div>
            </div>

            <div class="col-2 mt-4  ">
                <div class="d-flex flex-column">
                    <div class="h-50  card ">
                    <button type="button" class="btn btn-outline-secondary ">Tylko zakończone </button>
                    </div>
                    <div class="h-50  card mt-3">
                    <button type="button" class="btn btn-outline-secondary"> Tylko ropoczęte</button>
                    </div>
                </div>
            </div>


        </div>
    
 

     <div class="card tile">



      
        <div class="card-body ">
            <hr class="hr-bold" />
            <div class="row mt-3 project-tile-header">
                <div class="col-2">
                   <p class="font-weight-bold">Identyfikator</p>
                </div>

                <div class="col-3">
                    <p class="font-weight-bold">Nazwa projektu</p>
                </div>

                <div class="col-2">
                    <p class="font-weight-bold">Data rozpoczęcia</p>
                </div>

                <div class="col-2">
                    <p class="font-weight-bold">Status</p>
                </div>
                <div class="col-2">
                    <p class="font-weight-bold">Progres</p>
                </div>
                
            </div>
            <hr class="hr-bold" />
            <div class="scrollable">
                @foreach (var project in Model){
                <a asp-controller="projects" asp-action="dashboard" asp-route-id="@project.id">

                    <div class="row project-tile">
                        <div class="col-2">
                            <p class="">@project.id</p>
                        </div>

                        <div class="col-3 ml-1">
                            <p class="">@project.projectName</p>
                        </div>

                        <div class="col-2 ml-2">
                            <p class="">@project.start</p>
                        </div>

                        <div class="col-2 ml-1">
                            <p class="">@project.status</p>
                        </div>
                        <div class="col-2">
                                <div class="progress my-progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                                </div>
                        </div>

                    </div>
                </a>
                <hr class="hr mt-3" />

                }
            </div>

            
     </div>

</div>
