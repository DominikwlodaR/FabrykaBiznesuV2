<script>
    $(document).ready(function () {
        var currentUrl = window.location.pathname;
        var navLinks = $(".ptojMenu .nav-link");

        navLinks.each(function () {
            var href = $(this).attr("href");
            if (currentUrl.startsWith(href)) {
                $(this).addClass("active");
            }
        });
    });
</script>